<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cecilia.appmoviles.DetailsActivity"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="@dimen/article_keylines"
            app:expandedTitleMarginStart="@dimen/md_keylines"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imgPlaya"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/article_keylines"
            android:paddingRight="@dimen/md_keylines"
            android:paddingTop="@dimen/md_keylines"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorAccent"
                android:text="Descripción"
                android:textSize="@dimen/article_titles"
                android:layout_marginBottom="@dimen/md_keylines" />

            <TextView
                android:id="@+id/beach_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/md_keylines"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorAccent"
                android:text="Servicios disponibles"
                android:textSize="@dimen/article_titles"
                android:layout_marginBottom="@dimen/md_keylines" />

        <GridLayout
            android:id="@+id/layout_imgs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:rowCount="4"
            android:columnCount="4">

            <ImageView
                android:layout_width="81dp"
                android:layout_height="66dp"
                android:id="@+id/imgAseos"
                android:contentDescription="@string/aseos" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imageDuchas" />
            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgbebida" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgcomida" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgsurf" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgdeporte" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imghamaca" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgInfantil" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imglimpieza" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgNautico" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgNudismo" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgPapelera" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgSombrilla" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgSubmarinismo" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="53dp"
                android:id="@+id/imgTurismo" />

        </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorAccent"
                android:text="Ubicación"
                android:textSize="@dimen/article_titles"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginTop="@dimen/md_keylines" />

            <TextView
                android:id="@+id/beach_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/md_keylines"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorAccent"
                android:text="Tiempo"
                android:textSize="@dimen/article_titles"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginTop="@dimen/md_keylines" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/md_keylines"
                android:id="@+id/beach_tempNow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/md_keylines"
                android:id="@+id/beach_tempMin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/md_keylines"
                android:id="@+id/beach_tempMax" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/md_keylines"
                android:id="@+id/beach_humidity" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/md_keylines"
                android:id="@+id/beach_tempWater" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cast_album_art_placeholder"
                android:id="@+id/imageViewTiempo"
                android:layout_weight="0.98" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
